<h1 class="center">Sign up</h1>
<%= render 'shared/errors', obj: @user  %>


<div class='row'>
    <div class="col-md-12">
        <%= form_for(@user, :html => { class: "form-horizontal", role: "form" }) do |f| %>

            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :username %> <br>
                </div>
                <div class="col-sm-8">
                     <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-sm-2">
                   <%= f.label :email %>
                </div>
                <div class="col-sm-8">
                 <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
                </div>
            </div>
            
            
            <div class="form-group">
                <div class="control-label col-sm-2">
                   <%= f.label :password %>
                </div>
                <div class="col-sm-8">
                 <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
                </div>
            </div>
            
            
            
            <div class="form-group center">
                <div class="col-sm-12">
                    <%= f.submit "Sign-up", class: 'btn btn-primary bt-lg'%>
                </div>
            </div>
             
        <% end %>
        
        
        <div class="center">
            <%= link_to "Back to Article Listing", articles_path %>
        </div>
        
    </div>
</div>